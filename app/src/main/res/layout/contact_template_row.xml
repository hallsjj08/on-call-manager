<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contactTemplateRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/circle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="16dp"
        android:background="@drawable/circle_contact_template_row"
        android:gravity="center"
        tools:text="@string/first_initial"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/circle_text"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/circle_text"
        app:layout_constraintTop_toTopOf="@id/circle_text"
        tools:text="@string/contact_name" />

    <TextView
        android:id="@+id/tvContactNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/circle_text"
        android:textColor="@color/primaryTextColor"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/circle_text"
        app:layout_constraintBottom_toBottomOf="@id/circle_text"
        tools:text="+1 (123) 555-3030" />

</androidx.constraintlayout.widget.ConstraintLayout>