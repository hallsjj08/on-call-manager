<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:layout_margin="16dp"
    android:id="@+id/contactTemplateRow"
    android:background="@color/primaryLightColor"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/circle_text"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"
                android:textSize="24sp"
                android:background="@drawable/circle_contact_template_row"
                android:text="@string/first_initial"
                android:textColor="@color/primaryTextColor"/>

                <TextView
                    android:id="@+id/tvContactName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_toEndOf="@id/circle_text"
                    android:text="@string/contact_name"
                    android:textColor="@color/primaryTextColor"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:id="@+id/tvCompanyName"
                    android:layout_toEndOf="@id/circle_text"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/primaryTextColor"
                    android:text="@string/company_name"/>

        <TextView
            android:id="@+id/tvDisplayNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/phone_num"
            android:textColor="@color/primaryTextColor"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:ignore="RelativeOverlap"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>