<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".call_manager_ui.CallManagerFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/cardViewTitleStyle"
                android:text="On Call Manager" />

            <Button
                style="@style/titleBarTextViewButtonStyle"
                android:id="@+id/edit"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/edit" />

            <Button
                style="@style/titleBarTextViewButtonStyle"
                android:id="@+id/done"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/done"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/add_on_call_item"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="16dp"
                android:src="@android:drawable/ic_input_add"
                android:background="@android:color/transparent"
                android:tint="@color/secondaryColor"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/days_manager_recyclerview"
        android:orientation="vertical"
        tools:listitem="@layout/on_call_item_template_row"/>

</LinearLayout>