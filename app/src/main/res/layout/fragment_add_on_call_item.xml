<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".AddOnCallItemFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/cardViewTitleStyle"
                android:text="Add On Call Time" />

            <Button
                android:id="@+id/cancel_add_item"
                style="@style/titleBarTextViewButtonStyle"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/cancel" />

            <Button
                style="@style/titleBarTextViewButtonStyle"
                android:id="@+id/add_on_call_item"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/save" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <Button
        android:id="@+id/buttonLabel"
        style="@style/addCallItemFragButtonStyle"
        android:text="On Call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider3" />

    <TextView
        android:id="@+id/textView2"
        style="@style/buttonLabelTextStyle"
        android:text="Label"
        app:layout_constraintBottom_toBottomOf="@+id/buttonLabel"
        app:layout_constraintStart_toStartOf="@+id/buttonLabel"
        app:layout_constraintTop_toTopOf="@+id/buttonLabel" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/allDaySwitch"
        style="@style/addCallItemFragButtonStyle"
        android:drawableEnd="@null"
        android:gravity="center_vertical|start"
        android:text="All Day"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLabel" />

    <Button
        android:id="@+id/buttonStartTime"
        style="@style/addCallItemFragButtonStyle"
        android:text="12:00 AM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allDaySwitch" />

    <Button
        android:id="@+id/buttonEndTime"
        style="@style/addCallItemFragButtonStyle"
        android:text="11:59 PM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartTime" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEndTime" />

    <TextView
        style="@style/buttonLabelTextStyle"
        android:id="@+id/textView3"
        android:text="Start Time"
        app:layout_constraintBottom_toBottomOf="@+id/buttonStartTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonStartTime" />

    <TextView
        style="@style/buttonLabelTextStyle"
        android:id="@+id/textView4"
        android:text="End Time"
        app:layout_constraintBottom_toBottomOf="@+id/buttonEndTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonEndTime" />

    <TextView
        style="@style/buttonLabelTextStyle"
        android:id="@+id/textView5"
        android:layout_marginTop="32dp"
        android:text="Repeat Days"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEndTime" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/days_manager_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:listitem="@layout/template_row_repeat_days" />

</android.support.constraint.ConstraintLayout>