<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".more.AboutFragment">

    <View
        android:id="@+id/topBarBackground"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/side_nav_bar"/>

    <TextView
        style="@style/buttonLabelTextStyle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/navigateUpButton"
        android:text="About"
        android:textColor="@android:color/white" />

    <ImageButton
        android:id="@+id/navigateUpButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        app:tint="@android:color/white"
        android:src="?attr/actionModeCloseDrawable" />

    <TextView
        style="@style/buttonLabelTextStyle"
        android:id="@+id/version"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:layout_below="@+id/topBarBackground"
        android:layout_alignParentStart="true"
        tools:text="Version: 1.4" />

    <Button
        style="@style/moreButtonStyle"
        android:id="@+id/aboutDeveloper"
        android:layout_below="@+id/version"
        android:text="About the Developer" />

    <Button
        style="@style/moreButtonStyle"
        android:id="@+id/productTour"
        android:layout_below="@+id/aboutDeveloper"
        android:text="Product Tour" />


</RelativeLayout>