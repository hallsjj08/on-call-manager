<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".permissions.PermissionNeededFragment">

    <View
        android:id="@+id/topBarBackground"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/side_nav_bar"/>

    <TextView
        style="@style/buttonLabelTextStyle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/navigateUpButton"
        android:text="Permissions"
        android:textColor="@android:color/white" />

    <ImageButton
        android:id="@+id/navigateUpButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        app:tint="@android:color/white"
        android:src="?attr/actionModeCloseDrawable" />

    <TextView
        style="@style/buttonLabelTextStyle"
        android:id="@+id/permissionListing"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:layout_below="@+id/topBarBackground"
        android:layout_alignParentStart="true"
        android:text="Permissions Needed:" />

    <TextView
        style="@style/buttonLabelTextStyle"
        android:id="@+id/permissionDescription"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="12sp"
        android:layout_below="@+id/permissionListing"
        android:layout_alignParentStart="true"
        android:text="@string/permission_description" />

    <Button
        style="@style/moreButtonStyle"
        android:id="@+id/callLogStateButton"
        android:layout_below="@+id/permissionDescription"
        android:text="Call Log &amp; Phone State" />

    <Button
        style="@style/moreButtonStyle"
        android:id="@+id/dndButton"
        android:layout_below="@+id/callLogStateButton"
        android:text="Do not Disturb Access" />

    <Button
        style="@style/moreButtonStyle"
        android:id="@+id/whiteListingButton"
        android:layout_below="@+id/dndButton"
        android:text="Ignore Battery Optimization" />

</RelativeLayout>