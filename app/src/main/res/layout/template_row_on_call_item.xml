<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:orientation="horizontal"
    android:layout_margin="4dp"
    android:id="@+id/contactTemplateRow"
    android:background="@color/primaryLightColor"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginBottom="0.5dp">

    <ImageButton
        android:id="@+id/deleteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-16dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@android:color/white"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_remove_56dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/day_active_switch"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvStartTime"
            style="@style/buttonLabelTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starts: 5:00PM Today"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvEndTime"
            style="@style/buttonLabelTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ends: 8:00AM Tomorrow"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Working Hard or Hardly Working" />

    </LinearLayout>

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/day_active_switch"
        android:layout_margin="16dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/edit_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="32dp"
        android:tint="@android:color/black"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

</RelativeLayout>
</android.support.v7.widget.CardView>